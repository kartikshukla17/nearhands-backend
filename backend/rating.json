{
  "info": {
    "name": "NearHands - Payments API",
    "_postman_id": "nearahands-payments-api-collection",
    "description": "Postman collection for Payments Module in NearHands backend.",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Create Payment",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Authorization", "value": "Bearer {{idToken}}" },
          { "key": "Content-Type", "value": "application/json" }
        ],
        "url": {
          "raw": "{{base_url}}/api/payments",
          "host": ["{{base_url}}"],
          "path": ["api", "payments"]
        },
        "body": {
          "mode": "raw",
          "raw": "{\n  \"user_id\": 1,\n  \"provider_id\": 2,\n  \"job_id\": 10,\n  \"amount\": 499,\n  \"method\": \"razorpay\",\n  \"status\": \"pending\"\n}"
        }
      }
    },
    {
      "name": "Get All Payments",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{base_url}}/api/payments",
          "host": ["{{base_url}}"],
          "path": ["api", "payments"]
        }
      }
    },
    {
      "name": "Get Logged-in User Payments",
      "request": {
        "method": "GET",
        "header": [
          { "key": "Authorization", "value": "Bearer {{idToken}}" }
        ],
        "url": {
          "raw": "{{base_url}}/api/payments/me",
          "host": ["{{base_url}}"],
          "path": ["api", "payments", "me"]
        }
      }
    },
    {
      "name": "Get Payment by ID",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{base_url}}/api/payments/:id",
          "host": ["{{base_url}}"],
          "path": ["api", "payments", ":id"]
        }
      }
    },
    {
      "name": "Get Payments by User ID",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{base_url}}/api/payments/user/:user_id",
          "host": ["{{base_url}}"],
          "path": ["api", "payments", "user", ":user_id"]
        }
      }
    },
    {
      "name": "Get Payments by Provider ID",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{base_url}}/api/payments/provider/:provider_id",
          "host": ["{{base_url}}"],
          "path": ["api", "payments", "provider", ":provider_id"]
        }
      }
    },
    {
      "name": "Get Payments by Job ID",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{base_url}}/api/payments/job/:job_id",
          "host": ["{{base_url}}"],
          "path": ["api", "payments", "job", ":job_id"]
        }
      }
    },
    {
      "name": "Update Payment",
      "request": {
        "method": "PUT",
        "header": [
          { "key": "Authorization", "value": "Bearer {{idToken}}" },
          { "key": "Content-Type", "value": "application/json" }
        ],
        "url": {
          "raw": "{{base_url}}/api/payments/:id",
          "host": ["{{base_url}}"],
          "path": ["api", "payments", ":id"]
        },
        "body": {
          "mode": "raw",
          "raw": "{\n  \"status\": \"completed\",\n  \"method\": \"razorpay\"\n}"
        }
      }
    },
    {
      "name": "Delete Payment",
      "request": {
        "method": "DELETE",
        "header": [
          { "key": "Authorization", "value": "Bearer {{idToken}}" }
        ],
        "url": {
          "raw": "{{base_url}}/api/payments/:id",
          "host": ["{{base_url}}"],
          "path": ["api", "payments", ":id"]
        }
      }
    }
  ],
  "variable": [
    { "key": "base_url", "value": "http://localhost:5000" },
    { "key": "idToken", "value": "" }
  ]
}
